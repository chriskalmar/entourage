{
  "name": "entourage-server",
  "version": "0.0.1",
  "description": "Environment bootstrapping for integration tests",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest --testPathIgnorePatterns test/",
    "test-watch": "jest --testPathIgnorePatterns test/ --watch",
    "test-integration": "jest --runInBand",
    "test-integration-watch": "jest --runInBand --watch",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "coverage": "NODE_ENV=test jest --runInBand --coverage",
    "coverage-ci": "npm run coverage && cat ./coverage/lcov.info | codecov",
    "build": "mkdir -p lib; npm run test && NODE_ENV=build babel src -d lib --verbose",
    "build-watch": "mkdir -p lib; NODE_ENV=build babel src -w -d lib --verbose",
    "dev": "nodemon --exec babel-node -r loadEnv.js src/",
    "start": "NODE_ENV=production node src/index.js",
    "release": "np --no-publish"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": "./node_modules/eslint/bin/eslint.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "pre-commit": "lint-staged",
  "keywords": [
    "test",
    "tests",
    "automation",
    "integration",
    "ci"
  ],
  "author": "Chris Kalmar <christian.kalmar@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.6.4",
    "@babel/core": "7.6.4",
    "@babel/node": "^7.7.0",
    "@babel/preset-env": "7.6.3",
    "@babel/runtime": "7.6.3",
    "babel-eslint": "10.0.3",
    "codecov": "3.6.1",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.5.0",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "nodemon": "^1.19.4",
    "prettier": "1.18.2",
    "prettier-eslint": "9.0.0",
    "rimraf": "3.0.0"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "graphql-yoga": "^1.18.3",
    "lodash": "^4.17.10"
  }
}
